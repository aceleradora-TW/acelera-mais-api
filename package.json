{
  "name": "acelera-mais-api",
  "version": "1.0.0",
  "description": "Acelera Mais",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/index.ts",
    "test": "jest ./test",
    "start": "cd dist && node index.js",
    "migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm  migration:revert",
    "migration:run": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm  migration:run",
    "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm  migration:generate -n",
    "test:e2e": "jest ./test-e2e",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored"
  },
  "engines": {
    "node": "14.x"
  },
  "keywords": [
    "borderplate",
    "aceleradora",
    "nodejs",
    "javascript"
  ],
  "author": "Ju Dantas",
  "license": "ISC",
  "dependencies": {
    "@babel/plugin-proposal-decorators": "^7.15.8",
    "axios": "^0.24.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "google-spreadsheet": "^3.2.0",
    "jest-mock-extended": "^2.0.4",
    "json-web-token": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.7.5",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.40"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.7",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.15.8",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/express": "^4.17.13",
    "@types/google-spreadsheet": "^3.1.5",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.3",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "cz-ptbr-changelog": "^1.0.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^7.0.4",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-ptbr-changelog"
    }
  }
}
